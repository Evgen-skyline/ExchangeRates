<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="evgenskyline.exchangerates.MainActivity"
    android:background="@color/mMainBackGroundColor">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Получаю данные с сайта НБУ..."
        android:id="@+id/mTextViev"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_below="@+id/spinner"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:textColor="@color/mTextColor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/m2textView"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/mTextColor"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:popupBackground="@color/mTextColor"
        android:background="@color/mTextColor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mButtonDate"
        android:id="@+id/button"
        android:layout_above="@+id/m2textView"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"
        android:background="@drawable/gradient_linear"
        android:onClick="mButtonClicked"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_above="@+id/button"
        android:layout_alignParentTop="@+id/m2textView"
        android:inputType="number"
        android:textColor="@color/mTextColor"
        android:hint="ГГГГММДД(пример: 19980120)"
        android:textColorHint="#c7c7c7"/>


</RelativeLayout>
